//c
#include <stdio.h>

int main() {
	// your code goes here
	int t;
	scanf("%d",&t);
	while(t--){
	    int n;
	    scanf("%d",&n);
	    int arr[n];
	    int sum=0;
	    for(int i=0;i<n;i++){
	        scanf("%d",&arr[i]);
	        sum+=arr[i];
	    }
	    printf("%d\n",sum-n);
	}

}

//python
# cook your dish here
def solve():
    n = int(input())
    a = list(map(int, input().split()))
    print(sum(a) - n)

t = int(input())
for _ in range(t):
    solve()
