//c
#include <stdio.h>
#include <string.h>

void solve() {
    int n, i, pulse_count = 0;
    char s[11]; // Assuming maximum length of string is 10, +1 for null terminator
    int silence_found = 0; // Boolean flag

    scanf("%d", &n);
    scanf("%s", s);

    for (i = 0; i < n; i++) {
        if (s[i] == '0') {
            silence_found = 1;
        } else if (silence_found && s[i] == '1') {
            pulse_count++;
        }
    }

    printf("%d\n", pulse_count);
}

int main() {
    int t;
    scanf("%d", &t);
    while (t--) {
        solve();
    }
    return 0;
}

//python
def solve():
    n = int(input())
    s = input()
    
    silence_found = False
    pulse_count = 0
    
    for i in range(n):
        if s[i] == '0':
            silence_found = True
        elif silence_found and s[i] == '1':
            pulse_count += 1
            
    print(pulse_count)

t = int(input())
for _ in range(t):
    solve()
