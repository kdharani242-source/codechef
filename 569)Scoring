//python
# cook your dish here
t=int(input())
for i in range(t):
    x,y=map(int,input().split())
    print(((x+y)//2),((y-x)//2))


    //c
    #include <stdio.h>

int main() {
	// your code goes here
	int t;
	scanf("%d",&t);
	while(t--){
	    int x,y;
	    scanf("%d %d",&x,&y);
	    if((x+y)%2==0){
	        printf("%d %d\n",((x+y)/2),((y-x)/2));
	    }
	    else{
	        printf("%d %d\n",((x+y)/2)+1,((y-x)/2));
	    }
	    
	}

}

