//c
#include <stdio.h>

int main() {
	// your code goes here
	int t;
	scanf("%d",&t);
	while(t--){
	    int n;
	    scanf("%d",&n);
	    int arr[n];
	    int arr1[n];
	    for(int i=0;i<n;i++){
	        scanf("%d",&arr[i]);
	    }
	    for(int i=0;i<n;i++){
	        scanf("%d",&arr1[i]);
	    }
	    int cost=0;
	    for(int i=0;i<n;i++){
	       if(arr[i]>arr1[i]){
	           cost+=arr[i]-arr1[i];
	       }
	   }
	   printf("%d\n",cost);
	}

}

//python
# cook your dish here
def solve():
    n = int(input())
    a = list(map(int, input().split()))
    b = list(map(int, input().split()))
    
    total_cost = 0
    for i in range(n):
        if a[i] > b[i]:
            total_cost += a[i] - b[i]
    print(total_cost)
t=int(input())
for i in range(t):
    solve()
