//python
t=int(input())
for i in range(t):
    a,b,c,d=map(int,input().split())
    print(max(a,b)+max(c,d))

    //c
    #include <stdio.h>

int main() {
	// your code goes here
	int t;
	scanf("%d",&t);
	while(t--){
	    int a,b,c,d;
	    scanf("%d %d %d %d",&a,&b,&c,&d);
	    int max_ab = (a > b) ? a : b;
        int max_cd = (c > d) ? c : d;
        printf("%d\n",max_ab+max_cd);
	}

}
