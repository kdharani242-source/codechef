//c
#include <stdio.h>

int main() {
	// your code goes here
	int t;
	scanf("%d",&t);
	while(t--){
	    int n,x;
	    scanf("%d %d",&n,&x);
	    int arr[n];
	    int count=0;
	    for(int i=0;i<n;i++){
	        scanf("%d",&arr[i]);
	        if(arr[i]>=x){
	            count+=1;
	        }
	    }
	    printf("%d\n",count);
	}
}

