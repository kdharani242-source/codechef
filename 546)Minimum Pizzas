//c
#include <stdio.h>

int main() {
	// your code goes here
	int t;
	scanf("%d",&t);
	while(t--){
	    int n,x;
	    scanf("%d %d",&n,&x);
	    if((n*x)%4==0){
	        printf("%d\n",(n*x)/4);
	    }
	    else{
	        printf("%d\n",(n*x)/4+1);
	    }
	}

}

//python
# cook your dish here
t=int(input())
for i in range(t):
    n,x=map(int,input().split())
    if((n*x)%4==0):
        print((n*x)//4)
    else:
        print((n*x)//4+1)
