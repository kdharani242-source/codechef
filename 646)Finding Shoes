//c
#include <stdio.h>

int main() {
	// your code goes here
	int t;
	scanf("%d",&t);
	while(t--){
	    int x,y;
	    scanf("%d %d",&x,&y);
	    if(y>x){
	        printf("%d\n",x);
	    }
	    else{
	        printf("%d\n",(x*2)-y);
	    }
	}

}

//python
# cook your dish here
t=int(input())
for i in range(t):
    x,y=map(int,input().split())
    if(y>x):
        print(x)
    else:
        print((x*2)-y)
