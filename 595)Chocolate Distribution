//c
#include <stdio.h>

int main() {
	// your code goes here
	int t;
	scanf("%d",&t);
	while(t--){
	    int n;
	    scanf("%d",&n);
	    if(n%2==0){
	        printf("%d %d\n",n/2,n);
	    }
	    else{
	        printf("%d %d\n",(n/2)+1,n);
	    }
	}

}

//python
# cook your dish here
t=int(input())
for i in range(t):
    n=int(input())
    if(n%2==0):
        print(n//2,n)
    else:
        print((n//2)+1,n)
